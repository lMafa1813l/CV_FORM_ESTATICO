<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Form.MainPage"
             BackgroundColor="#FAF3E0">
    <StackLayout Padding="20">

        <ScrollView>
            <Frame BorderColor="#D4A373" CornerRadius="10" Padding="10" BackgroundColor="#FFE4C4">
                <StackLayout Padding="10">

                    <Label Text="Curriculum Vitae" 
                           FontSize="26" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center" 
                           TextColor="#5A2A27"
                           Margin="0,20,0,20" />

                    <Label Text="Información personal" 
                           FontAttributes="Bold" 
                           FontSize="20" 
                           TextColor="#5A2A27"
                           Margin="0,10" />
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Nombre:" WidthRequest="120" FontSize="18" TextColor="#8B5E34"/>
                        <Entry Placeholder="Ingrese su nombre completo" HorizontalOptions="FillAndExpand" FontSize="16" TextColor="#5A2A27"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Correo Electrónico:" WidthRequest="120" FontSize="18" TextColor="#8B5E34"/>
                        <Entry Placeholder="Ingrese su correo electrónico" Keyboard="Email" HorizontalOptions="FillAndExpand" FontSize="16" TextColor="#5A2A27"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Teléfono:" WidthRequest="120" FontSize="18" TextColor="#8B5E34"/>
                        <Entry Placeholder="Ingrese su teléfono" Keyboard="Telephone" HorizontalOptions="FillAndExpand" FontSize="16" TextColor="#5A2A27"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Dirección:" WidthRequest="120" FontSize="18" TextColor="#8B5E34"/>
                        <Entry Placeholder="Ingrese su dirección" HorizontalOptions="FillAndExpand" FontSize="16" TextColor="#5A2A27"/>
                    </StackLayout>

                    <Label Text="Perfil" 
                           FontAttributes="Bold" 
                           FontSize="20" 
                           TextColor="#5A2A27"
                           Margin="0,10" />
                    <StackLayout>
                        <Label Text="Escribe un breve párrafo sobre ti:" FontSize="18" TextColor="#8B5E34"/>
                        <Editor Placeholder="Ingrese su perfil" 
                                AutoSize="TextChanges" 
                                HeightRequest="100" 
                                FontSize="16" TextColor="#5A2A27"/>
                    </StackLayout>

                    <Label Text="Formación" 
                           FontAttributes="Bold" 
                           FontSize="20" 
                           TextColor="#5A2A27"
                           Margin="0,10" />
                    <StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Grado:" WidthRequest="120" FontSize="18" TextColor="#8B5E34"/>
                            <Entry Placeholder="Ingrese su grado" HorizontalOptions="FillAndExpand" FontSize="16" TextColor="#5A2A27"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Institución:" WidthRequest="120" FontSize="18" TextColor="#8B5E34"/>
                            <Entry Placeholder="Ingrese su institución" HorizontalOptions="FillAndExpand" FontSize="16" TextColor="#5A2A27"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Año:" WidthRequest="120" FontSize="18" TextColor="#8B5E34"/>
                            <Entry Placeholder="Ingrese el año de graduación" Keyboard="Numeric" HorizontalOptions="FillAndExpand" FontSize="16" TextColor="#5A2A27"/>
                        </StackLayout>
                    </StackLayout>

                    <Label Text="Experiencia laboral" 
                           FontAttributes="Bold" 
                           FontSize="20" 
                           TextColor="#5A2A27"
                           Margin="0,10" />
                    <StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Empresa:" WidthRequest="120" FontSize="18" TextColor="#8B5E34"/>
                            <Entry Placeholder="Ingrese el nombre de la empresa" HorizontalOptions="FillAndExpand" FontSize="16" TextColor="#5A2A27"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Puesto:" WidthRequest="120" FontSize="18" TextColor="#8B5E34"/>
                            <Entry Placeholder="Ingrese su puesto" HorizontalOptions="FillAndExpand" FontSize="16" TextColor="#5A2A27"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Años:" WidthRequest="120" FontSize="18" TextColor="#8B5E34"/>
                            <Entry Placeholder="Ingrese los años trabajados" HorizontalOptions="FillAndExpand" FontSize="16" TextColor="#5A2A27"/>
                        </StackLayout>
                    </StackLayout>

                    <Label Text="Habilidades" 
                           FontAttributes="Bold" 
                           FontSize="20" 
                           TextColor="#5A2A27"
                           Margin="0,10" />
                    <StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <CheckBox Color="#D4A373"/>
                            <Label Text="Habilidad 1:" VerticalOptions="Center" FontSize="18" TextColor="#8B5E34"/>
                        </StackLayout>
                    </StackLayout>

                </StackLayout>
            </Frame>
        </ScrollView>

        <Frame BorderColor="#D4A373" CornerRadius="10" Padding="10" Margin="20,0,20,20" BackgroundColor="#FAF3E0">
            <Button Text="Enviar" 
                    BackgroundColor="#D4A373" 
                    TextColor="White" 
                    FontAttributes="Bold"
                    Margin="0,20,0,0"/>
        </Frame>

    </StackLayout>
</ContentPage>
